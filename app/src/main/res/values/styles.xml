<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="fontFamily">@font/alata</item>
        <item name="android:textColor">@color/textMain</item>
        <item name="android:backgroundTint">@color/colorPrimaryVariant</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/alata</item>
        <item name="android:textColor">@color/textButton</item>
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ItemInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/alegreya_sc_italic</item>
        <item name="android:textColor">@color/textMain</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="fontFamily">@font/alata</item>
        <item name="android:backgroundTint">@color/colorPrimaryVariant</item>
        <item name="android:textColor">@color/textMain</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>