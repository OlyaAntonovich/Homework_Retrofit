<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/screen_first">

    <fragment
        android:id="@+id/screen_first"
        android:name="com.example.homework_retrofit.ScreenFirst"
        tools:layout="@layout/screen_first">
        <action
            android:id="@+id/to_screen_second"
            app:destination="@id/screen_second" />

        <action
            android:id="@+id/to_screen_third"
            app:destination="@id/screen_third" />

    </fragment>

    <fragment
        android:id="@+id/screen_second"
        android:name="com.example.homework_retrofit.ScreenSecond"
        tools:layout="@layout/screen_second">
        <argument
            android:name="id"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/screen_third"
        android:name="com.example.homework_retrofit.ScreenThird"
        tools:layout="@layout/screen_third">

        <argument
            android:name="KEY"
            app:argType="string" />

    </fragment>


</navigation>